<div class="container_projects" data-turbolinks="false">
  <h2><%= t('project.index.title') %></h2>

  <div class="content">
    <div class="header_presentation">
      <ul>
        <% @projects.each do |project| %>
          <li>
            <div class="block_presentation">
              <a href="#project-<%= project.id %>">
                <%= image_tag project.image, class: "project_img" %>
                <div class="project_title"><h4><%= project.title %></h4></div>
              </a>
            </div>
          </li>
        <% end %>
        
      </ul>
    </div>
    <div class="lines">
      <div></div>
      <div></div>
      <div></div>
      <div></div>
      <div></div>
    </div>
    <div class="more_informations_content">
      <% @projects.each do |project| %>
        <div class="inner_more_informations_content project" id="project-<%= project.id %>" > 
          <h3><%= project.title %></h3>
          <div class="bloc_description">
            <p><%= project.description %></p>
            <button class="button_seeme"><%= link_to t('project.index.inscription'), new_student_path %></button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
